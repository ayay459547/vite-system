{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": false,
    "noImplicitThis": false, // this
    "noImplicitAny": false, // any
    "target": "ES2023",
    "lib": [
      "ES2023",
      "ES2023.Array",
      "ES2022",
      "ES2022.Array",
      "DOM"
    ],
    "incremental": true
  }
}
