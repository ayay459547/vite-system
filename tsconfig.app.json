{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    // "shims-vue.d.ts",
    "vite-env-override.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue",
    "./tests/**/*.ts",
    "./tests/**/*.tsx"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "$/*": ["./public/*"]
    }
  }
}
